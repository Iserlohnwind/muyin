.index-container {
  display: flex;
  flex-direction: column;
  /* align-items: center; */
}



.input-line {
  line-height: 120rpx;
  height: 120rpx;
  text-align: left;
  margin: 0rpx 30rpx;
  border-bottom: 1px solid #ddd;
  display: flex;
  font-size: 30rpx; 
}

.input-line text {
    display: inline-block;
    width: 250rpx;
}

.input-line input {
  flex:1;
  display: inline-block;
  line-height: 120rpx;
  height: 120rpx;
}

.input-line .section{
  flex: 1;
  display: inline-block;
  line-height: 120rpx;
  height: 120rpx;
}

button {
  width: 80%;
  margin-left: 10%;
  margin-top: 80rpx;
}